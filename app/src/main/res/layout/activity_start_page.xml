<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome2"
    tools:context="com.herokuapp.chatio_me.realchat_ios.StartPageActivity">

    <Button
        android:id="@+id/already_have_account_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/need_account_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:background="@drawable/btn_login"
        android:padding="18dp"
        android:text="Đã có tài khoản ?"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <Button
        android:id="@+id/need_account_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/already_have_account_button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/already_have_account_button"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/have_a_acc_btn"
        android:padding="18dp"
        android:text="TẠO TÀI KHOẢN ?"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />
</RelativeLayout>
